	keywords = {galaxies: stellar content, infrared: galaxies, galaxies: ISM, dust, extinction},
	pages = {1595--1617},
	file = {Full Text PDF:/Users/chahah/Zotero/storage/3K94TBIR/da Cunha et al. - 2008 - A simple model to interpret the ultraviolet, optic.pdf:application/pdf},
}

