	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Cameron, E. and Pettitt, A. N.},
	month = sep,
	year = {2012},
	keywords = {galaxies: formation, galaxies: evolution, methods: statistical},
	pages = {44--65},
	file = {Full Text PDF:/Users/chahah/Zotero/storage/UCB9TMNL/Cameron and Pettitt - 2012 - Approximate Bayesian Computation for astronomical .pdf:application/pdf},
}

